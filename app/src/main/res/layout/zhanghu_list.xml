<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/id"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:text="id"/>
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/image"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/id"
        android:src="@mipmap/baoma"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/chepai"
        android:textColor="#000"
        android:layout_toRightOf="@id/image"
        android:text="辽A10001"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/name"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_below="@id/chepai"
        android:layout_toRightOf="@id/image"
        android:text="123"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/money"
        android:layout_centerInParent="true"
        android:textColor="#000"
        android:text="余额：100元"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/chongzhi"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_80"
        android:textSize="25sp"
        android:text="充值"
        android:background="@drawable/zhanghu_btn"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:layout_toLeftOf="@id/chongzhi"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp"
        />
</RelativeLayout>